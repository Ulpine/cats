

<div class="max-w-7xl mx-auto px-4 py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <!-- Product Image -->
    <div class="relative">
      <%= image_tag @product.image_url, class: "w-full rounded-lg shadow-lg" if @product.image_url %>
    </div>

    <!-- Product Info -->
    <div class="space-y-6">
      <h1 class="text-4xl font-bold"><%= @product.name %></h1>
      <div class="text-3xl font-bold text-gray-900">
        <%= number_to_currency(@product.price, unit: "â‚¬") %>
      </div>

      <div class="prose max-w-none">
        <h2 class="text-2xl font-semibold mb-4">Description</h2>
        <%= @product.description %>
      </div>

      <%= button_to cart_add_item_path(@cart, product_id: @product.id), method: :post, class: "add-to-cart-btn w-full bg-black text-white py-3 px-6 rounded-lg hover:bg-gray-800 transition-colors", data: { add_to_cart: true } do %>
        Ajouter au panier
      <% end %>

    </div>
  </div>
</div>
