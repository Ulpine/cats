<div class="home-container">
  <!-- Nav Section -->
  <div class="home-page">
  <!-- Banner Section -->
  <div class="banner">
    <%= image_tag "chatbanner.jpg", class: "banner__image" %>
    <div class="banner__overlay">
      <div class="banner__content">
        <h1>Bienvenue sur Notre Boutique</h1>
        <p>Découvrez nos produits d'exception</p>
        <%= link_to "Voir tous nos produits", products_path, class: "banner__button" %>
      </div>
    </div>
  </div>

  <!-- Featured Products Section -->
  <div class="featured-products">
    <h2>Nos Produits Phares</h2>

    <div class="products-grid">
      <% @featured_products.each do |product| %>
        <div class="product-card" data-aos="fade-up">
          <%= link_to product_path(product) do %>
            <%= image_tag product.image_url, class: "product-card__image" if product.image_url %>
            <div class="product-card__content">
              <h3><%= product.name %></h3>
              <p><%= product.short_description %></p>
              <div class="product-card__footer">
                <span class="product-card__price"><%= number_to_currency(product.price, unit: "€") %></span>
                <%= button_to "Voir le produit", product_path(product), method: :get, class: "product-card__button" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
